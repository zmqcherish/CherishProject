<Window x:Class="MicrosoftCoreFans.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="微软核心粉丝抽奖平台" Height="500" Width="500">
    <Grid  Background="#0078D7">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>

        </Grid.RowDefinitions>
    <StackPanel Grid.Row="0">
        <StackPanel Orientation="Horizontal" Height="50">
                <TextBlock Text="请输入转发总数：" FontSize="20" VerticalAlignment="Center" Foreground="White"/>
            <TextBox x:Name="txtNum" Width="200" Height="30"/>
        </StackPanel>
        <Button Click="Button_Click" Height="100" Content="开始" />
            <TextBlock Text="抽奖结果：" FontSize="30" Foreground="White"/>
            <TextBlock x:Name="txtResult" FontSize="50" Foreground="White" HorizontalAlignment="Center"/>
        </StackPanel>
        <Grid VerticalAlignment="Bottom" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>

            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="@MicrosoftCoreFans" Foreground="White" VerticalAlignment="Bottom" FontSize="30"/>
            <Image Grid.Column="1" Source="logo.jpg" Width="180" HorizontalAlignment="Right"/>
        </Grid>
   
    </Grid>
</Window>
